<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.HBox?>
<VBox fx:controller="sample.Controller" spacing="10"
          xmlns:fx="http://javafx.com/fxml" alignment="center">
    <Label fx:id="label1" text="Please select mode"/>
    <HBox spacing="10">
    <RadioButton fx:id="modeButton1" text="random" />
    <RadioButton fx:id="modeButton2" text="easy" />
    <RadioButton fx:id="modeButton3" text="medium" />
    <RadioButton fx:id="modeButton4" text="hard" />
    </HBox>
    <Button fx:id="startButton" text="Start" onAction="#printOut"/>
    <Label fx:id="label2" text="Please play 24 game with below input"/>
    <TextArea fx:id="outputText1" prefHeight="30" />
    <TextArea fx:id="outputText2"/>
</VBox>
